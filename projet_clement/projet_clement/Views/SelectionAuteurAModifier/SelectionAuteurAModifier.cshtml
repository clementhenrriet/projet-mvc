@model projet_clement.Models.HomeModel

<div class="container" style="align-content:center; margin-top:30px">
    
    <form method="post" action="~/Home/EditUser">
        <a href="/Home/Index">Retourner à la page d'accueill</a><br />
        Rentrez l'id de l'auteur à modifier: <input type="text" name="userId" /><br />
        <input type="submit" class="btn btn-primary" value="Sélectionner" />

    </form>

    <h3>Rappel des auteurs créés</h3>
    <table>
        <tr>
            <td>Nom</td>
            <td>Prénom</td>
            <td>Id</td>
        </tr>
        @foreach(var i in Model.UserList)
        {
            <tr>
                <td>@i.Nom</td>
                <td>@i.Prenom</td>
                <td>@i.userId</td>
            </tr>
        }
    </table>
</div>
